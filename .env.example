# To populate a .env file, copy this file to .env:
#
#   cp -n .env.example .env

# Web Server
HOST="0.0.0.0"
PORT=8080

# WebUI password. Leave it an empty string to disable password protection.
PASSWORD="fusion"

# Path to store sqlite DB file
DB="fusion.db"

# Enable Secure Cookie
# It is automatically set to true when TLS_* is not empty.
SECURE_COOKIE=false

# Path to TLS cert and key files
# If you are using a reverse proxy like Nginx to handle HTTPS, please leave these empty.
TLS_CERT=""
TLS_KEY=""

# Auto-fetch Full Content
# Enable automatic extraction of full article content from web pages when RSS feeds are updated.
# This uses readability algorithm to extract the main content from the original web page.
# Priority: Feed level > Group level > System level (default)
# You can override this setting per Group or per Feed in the UI.
AUTO_FETCH_FULL_CONTENT=false
